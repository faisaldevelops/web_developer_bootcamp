<%- include('partials/header'); -%>

<div class="container">
  <header class='jumbotron'>
    <div class="container">
      <h1>Welcome to YelpCamp!</h1>
      <p>View our hand-picked campgrounds all over the world</p>
      <a class='btn btn-primary btn-large' href="/campgrounds/new">Add New Campground</a>
    </div>
  </header>

    <div class="container">
      <div class="row">
        <% campgrounds.forEach(function(campground){ %>
          <div class="col-md-3 col-sm-6">
            <figure class="figure img-thumbnail">
              <img src= "<%= campground.image %>" class='figure-img img-fluid rounded'>
              <figcaption class='figure-caption text-center'>
                <b><%= campground.name %></b>
                <p><a href="/campgrounds/<%= campground._id %>" class= "btn btn-primary btn-sm">More Info!</a></p>
              </figcaption>

            </figure>

          </div>
        <% }) %>
      </div>
    </div>

</div>

<%- include('partials/footer'); -%>
